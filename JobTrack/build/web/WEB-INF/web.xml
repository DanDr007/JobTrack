<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>nuevaseccion</servlet-name>
        <servlet-class>servlets.nuevaseccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>iniciarsesion</servlet-name>
        <servlet-class>servlets.iniciarsesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrarusuario</servlet-name>
        <servlet-class>servlets.registrarusuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerSeccionServlet</servlet-name>
        <servlet-class>servlets.ObtenerSeccionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modificarseccion</servlet-name>
        <servlet-class>servlets.modificarseccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>borrarcurriculum</servlet-name>
        <servlet-class>servlets.borrarcurriculum</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>nuevaseccion</servlet-name>
        <url-pattern>/nuevaseccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>iniciarsesion</servlet-name>
        <url-pattern>/iniciarsesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrarusuario</servlet-name>
        <url-pattern>/registrarusuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerSeccionServlet</servlet-name>
        <url-pattern>/ObtenerSeccionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modificarseccion</servlet-name>
        <url-pattern>/modificarseccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>borrarcurriculum</servlet-name>
        <url-pattern>/borrarcurriculum</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
